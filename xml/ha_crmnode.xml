<refentry id="man.crmnode">
 <refmeta>
  <refentrytitle>crm_node</refentrytitle>
  <manvolnum>8</manvolnum>
 </refmeta>
 <refnamediv>
  <refname>crm_node</refname><refpurpose>Lists the members of a cluster</refpurpose>
 </refnamediv>
 <refsect1>
  <title>Synopsis</title>
<screen><command>crm_node</command> [-V] [-p|-e|-q]</screen>
 </refsect1>
 <refsect1>
  <title>Description</title>
  <para>
   Lists the members of a cluster.
  </para>
 </refsect1>
 <refsect1>
  <title>Options</title>
  <variablelist>
   <varlistentry>
    <term><option>-V</option>
    </term>
    <listitem>
     <para>
      be verbose
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><option>--partition</option>, <option>-p</option>
    </term>
    <listitem>
     <para>
      print the members of this partition
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><option>--epoch</option>, <option>-e</option>
    </term>
    <listitem>
     <para>
      print the epoch this node joined the partition
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><option>--quorum</option>, <option>-q</option>
    </term>
    <listitem>
     <para>
      print a 1 if our partition has quorum
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>
</refentry>
